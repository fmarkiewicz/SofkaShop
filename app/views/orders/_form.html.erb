<div class="container">
  <%= form_with(model: order, local: true) do |form| %>
      <% if order.errors.any? %>
          <div id="error_explanation" class="col-xs-12">
            <ul class="list-group">
              <% order.errors.full_messages.each do |message| %>
                  <li class="list-group-item list-group-item-danger"><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :email %>
        <%= form.text_field :email, id: :order_email, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :order_first_name, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :order_last_name, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :phone %>
        <%= form.text_field :phone, id: :order_phone, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :address %>
        <%= form.text_field :address, id: :order_address, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :zip_code %>
        <%= form.text_field :zip_code, id: :order_zip_code, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :city %>
        <%= form.text_field :city, id: :order_city, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :company %>
        <%= form.text_field :company, id: :order_company, class: "form-control" %>
      </div>

      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :nip %>
        <%= form.text_field :nip, id: :order_nip, class: "form-control" %>
      </div>
                                                
      <div class="field form-group col-md-6 col-sm-12 col-xs-12">
        <%= form.label :comment %>
        <%= form.text_area :comment, id: :order_comment, class: "form-control" %>
      </div>
      <div class="clearfix"></div>
      <div class="row sf-m-b">
        <div class="col-xs-12 col-sm-12 col-md-6">
          <div class="col-xs-4">
            <%= radio_button_tag(:payment_type, "visa", {checked: true}, class: 'visa sf-center-block sf-m-b') %>
            <label class="sf-block text-center" for="payments_visa"><%= image_tag 'payment_types/visa.jpg', class: 'sf-photo-payments visa' %></label>
          </div>
          <div class="col-xs-4">
            <%= radio_button_tag(:payment_type, "mastercard", {}, class: 'mastercard sf-center-block sf-m-b') %>
            <label class="sf-block text-center" for="payments_mastercard"><%= image_tag 'payment_types/mastercard.jpg', class: 'sf-photo-payments mastercard' %></label>
          </div>
          <div class="col-xs-4">
            <%= radio_button_tag(:payment_type, "paypal", {}, class: 'paypal sf-center-block sf-m-b') %>
            <label class="sf-block text-center" for="payments_paypal"><%= image_tag 'payment_types/paypal.jpeg', class: 'sf-photo-payments paypal' %></label>
          </div>
        </div>
      </div>

      <div class="actions col-sm-12 col-xs-12 sf-m-b">
        <%= form.submit t('views.products.order'), class: "btn btn-primary btn-lg" %>
      </div>
  <% end %>
</div>