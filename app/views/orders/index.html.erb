<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Status</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>Nip</th>
      <th>Company</th>
      <th>Email</th>
      <th>Zip code</th>
      <th>Total price in int</th>
      <th>Total shipment price in int</th>
      <th>Payment type</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_number %></td>
        <td><%= order.status %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.country %></td>
        <td><%= order.nip %></td>
        <td><%= order.company %></td>
        <td><%= order.email %></td>
        <td><%= order.zip_code %></td>
        <td><%= order.total_price_in_int %></td>
        <td><%= order.total_shipment_price_in_int %></td>
        <td><%= order.payment_type %></td>
        <td><%= order.comment %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

