<!DOCTYPE html>
<html>
  <head>
    <title>Sofka</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= stylesheet_link_tag    "controllers/#{params[:controller]}", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_include_tag "controllers/#{params[:controller]}", 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <!--navbar-->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Sofka</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="active"><a href="#">Home</a></li>
        <li><%= link_to t('navbar.offer'), products_path %></li>
        <li><%= link_to t('global.contact'), contact_path %></li>
        <li><%= link_to t('global.about'), '#' %></li>
      </ul>
    </div>
  </nav>

    <%= yield %>

  <footer>
    <ul class="sf-footer">
      <li>
        <%= login_link %>
      </li>
      <li>
        <%= link_to "Rejestracja", new_user_registration_path, class: "sf-block" %>
      </li>
      <li>
        <%= link_to "Kontakt", '#', class: "sf-block" %>
      </li>
    </ul>
  </footer>
  </body>
</html>
